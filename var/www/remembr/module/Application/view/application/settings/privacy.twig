{% extends format == 'tpl' ? 'application/settings/tpl' : 'application/settings/index' %}
{% do headTitle('Change privacy | Remembr.' | trans)%}
{% block settings %}

<div>
    <div class="publish_page light_container privacy_settings">
        <form name="privacy" novalidate ng-submit="save()">
            <div class="inv_friend_lft">
                <h5>{{'Privacy settings'|trans}}</h5>

                <ul ng-class="{loader : editpage.private === undefined }">
                    <li>
						<label>
							<span><input ng-model="editpage.private" type="radio" name="privacy" value="0" checked />{{'Open' | trans}}</span>
							<em>{{ 'Anyone can view the page and add memories' | trans}}</em>
						</label>
                    </li>

                    <li>
						<label>
							<span><input ng-model="editpage.private" type="radio" name="privacy" value="1" />{{'Private' | trans}}</span>
							<em>{{ 'Only invitees can view the page and add memories' | trans}}</em>
						</label>
                    </li>

                    <li class="no_border">
                    </li>

                </ul>

                <div class="clear"></div>

            </div>

            <div class="help_cont">
                <h5>{{cms('help_settings_privacy').title()}}</h5>
					{{cms('help_settings_privacy').text() | raw}}
            </div>

            <div class="clear"></div>

            <input name="" type="submit" value="{{'Save changes' |trans}}" class="save_changes" ng-class="{disabled:!privacy.$dirty}" />

            <input name="" type="button" value="{{'Cancel' |trans}}" class="cancel_but" ng-click="close()" />

            <div class="clear"></div>
        </form>
    </div>

</div>
<div>


{% endblock settings %}