                                <tr>
                                    <td>
                                        <div style="background-color:#d4d1d0;padding:15px;">
                                            <img src="{{ url('remembr', {}, {force_canonical: true}) }}/images/merk-logo-large.png" width="136" height="65" alt="Remembr" border="0">
                                        </div>
                                        <div style="background-color:#f6b6c5;padding:15px;"></div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div style="padding:15px;background-color:#fff;border-radius:3px">
                                            <table width="100%" cellpadding="0" cellspacing="0" border="0">
                                                <tr>
                                                    <td class="st-content">
                                                            {{ content|raw }}
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <hr />
