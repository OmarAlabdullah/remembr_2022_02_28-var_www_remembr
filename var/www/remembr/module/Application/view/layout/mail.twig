                                                                <a href="https://twitter.com/Remembr_com"  title="Twitter"><img src="{{ url('remembr', {}, {force_canonical: true}) }}images/icons/twitter32.png" width="32" height="32" alt="Twitter"></a>
                                                                <br />
                                                                <br />
                                                               &copy; Remembr. 2015
                                                               <br />
                                                               E: <a href="mailto:info@remembr.com">info@remembr.com</a>
                                                            </small>
                                                        </p>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <hr />
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
